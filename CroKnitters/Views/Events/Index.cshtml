@using CroKnitters.Entities;
@model EventViewModel
@{
    ViewData["Title"] = "Events";
}

<div class="text-5xl font-extrabold text-center">
    <span>
        Events List
    </span>
</div>

<div class="justify-content-center rounded-lg border w-auto shadow-xl m-5 bg-white">

    <div class="p-5">

        @if (TempData["ErrorMessage"] != null)
        {
            <div id="errorMessage" class="alert alert-danger">
                @TempData["ErrorMessage"]
            </div>
        }

        @if (TempData["SuccessMessage"] != null)
        {
            <div id="successMessage" class="alert alert-success">
                @TempData["SuccessMessage"]
            </div>
        }

        <p>
            <a class="btn btn-primary p-2" asp-controller="Events" asp-action="CreateEvent">Create an Event</a>
        </p>

        <table class="table table-striped">
            <thead class="thead-dark">
                <tr>
                    <th>
                        Event Title
                    </th>
                    <th>
                        About
                    </th>
                    <th>
                        Date held
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.Events)
                {
                    <tr>
                        <td>
                            @item.EventTitle
                        </td>
                        <td>
                            @item.Description
                        </td>
                        <td>
                            @item.Date
                        </td>

                        <td>
                            @if (item.Date < DateTime.Now)
                            {
                                <p>Past Event</p>
                            }
                            else
                            {
                                if (Context.Request.Cookies["userId"] != null && item.OwnerId == Int32.Parse(Context.Request.Cookies["userId"]))
                                {
                                    <form action="@Url.Action("DeleteEvent", "Events", new { id = item.EventId })" method="post">
                                        <button type="submit" class="btn btn-danger bg-danger">Delete</button>
                                    </form>


                                    <form class="p-1" action="@Url.Action("EditEvent", "Events", new { id = item.EventId })">
                                        <button type="submit" class="btn btn-primary bg-primary">Edit</button>
                                    </form>

                                    /*
                                    <a href="@Url.Action("EditEvent", "Events", new { id = item.EventId })" class="w-auto justify-center rounded-md bg-indigo-600 m-3 px-3 py-1.5
                                    text-sm font-semibold leading-6 text-white shadow-sm hover:bg-indigo-500
                                    focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2
                                    focus-visible:outline-indigo-600 mt-2" role="button">EDIT</a>
                                    */
                                }
                                else
                                {
                                    if (item.EventUsers != null)
                                    {
                                        int counter = 0;

                                        foreach (var trial in item.EventUsers)
                                        {
                                            if (trial.UserId == Int32.Parse(Context.Request.Cookies["userId"]))
                                            {
                                                counter++;
                                            }
                                        }

                                        if (counter == 0)
                                        {
                                            <form action="@Url.Action("RegisterUser", "Events", new { UserId = Context.Request.Cookies["userId"], EventId = item.EventId })" method="post">
                                                <button type="submit" class="btn btn-primary bg-primary">Register</button>
                                            </form>
                                        }
                                        else
                                        {
                                            <form action="@Url.Action("UnregisterUser", "Events", new { UserId = Context.Request.Cookies["userId"], EventId = item.EventId })" method="post">
                                                <button type="submit" class="btn btn-primary bg-primary">Un-Register</button>
                                            </form>
                                        }

                                    }

                                }
                            }
                        </td>

                    </tr>
                }
            </tbody>
        </table>

    </div>
</div>

