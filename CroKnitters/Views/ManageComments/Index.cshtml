@using CroKnitters.Entities;
@model List<Comment>
@{
    ViewData["Title"] = "Comment Section";
}
@functions {
    // Define a function to filter bad words
    public string FilterBadWords(string content)
    {
        // List of bad words
        var badWords = new List<string> { "Shitty", "shitty", "Shit", "shit", "Fuck", "fuck", "dick", "ass", "bitch", "hell", "whore", "piss", "pussy" }; // Add more bad words as needed

        // Iterate through bad words and replace them with a warning message
        foreach (var word in badWords)
        {
            content = content.Replace(word, "<span style='color:red'>WARNING: Inappropriate Content</span>");
        }

        return content;
    }
}

<div class="flex">
    <div class="flex-1 rounded-lg border shadow-xl m-5 justify-center bg-white">
        <table class="table table-striped" ">
            <tr>
                <th class="table-dark">
                    COMMENTS
                </th>
                <th class="table-dark">
                    WARNING
                </th>
                <th class="table-dark">
                </th>
            </tr>

            @if (Model != null)
        {
            @foreach (var item in Model)
            {
                    <tr>
                        <td>
                            <div>@Html.DisplayFor(modelItem => item.Content)</div>
                        </td>
                        <td>
                            <div>@Html.Raw(FilterBadWords(item.Content))</div>
                        </td>

                        <td>
                            <a href="@Url.Action("DeleteComment", "Comment", new { id = item.CommentId })" class="w-auto justify-center rounded-md bg-indigo-600 m-3 px-3 py-1.5
                            text-sm font-semibold leading-6 text-white shadow-sm hover:bg-indigo-500
                            focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2
                            focus-visible:outline-indigo-600 mt-2" role="button">DELETE</a>
                        </td>
                    </tr>
            }
        }
        </table>
        @* <p>No records to display yet.</p> *@
    </div>
</div>